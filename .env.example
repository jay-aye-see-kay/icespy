# Production Environment Variables
# Copy this file to .env and update the values

# Django Settings
SECRET_KEY=your-very-secure-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,localhost,127.0.0.1
LOG_LEVEL=INFO

# Database (SQLite paths - relative to container)
DATABASE_PATH=/app/data/db.sqlite3

# Static and Media Files
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/data/media

# SSL/Security (set to True if using HTTPS)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=

# Optional: Create superuser on first deployment
# Remove these after first run for security
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change-this-password
